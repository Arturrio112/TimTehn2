<section class="container-xxl">
    <div class="text-center">
        <h1 class="display-1 fw-bolder">Ongoing Sales</h1>
    </div>
</section>

<section class="container-xxl align-content-center">
    <div class="row justify-content-center align-content-center my-5 g-4">
        <% for(const obj of data) {%>
            <div class="col-sm-8 col-lg-4 d-flex justify-content-center align-items-stretch mb-5">
                <div class="card border-2 border-dark">
                    <%if(obj.auction==1) { %>
                        <div class="card-header text-center text-danger fw-bold">Auction</div>
                        <% }else{ %>
                            <div class="card-header text-center fw-bold">Sale</div>
                    <%}%>
                            <img class="card-img-top" src="/img/logg.png" alt="Card image ">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <%= obj.name%>
                                </h5>
                                <p class="card-text">
                                    <%= obj.description%>
                                </p>
                                <a href="/product/<%= obj.ProduktsID %> " class="btn btn-primary" action="GET">Check Out</a>
                            </div>

                </div>
            </div>
            <% } %>
    </div>
</section>