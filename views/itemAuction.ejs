                <h5 class="display-3">
                    <%= obj.name %>
                </h5>
                <p class="lead my-4">
                    <%=obj.description %>
                </p>
                <h2>Current highest price:</h2>
                <h2>
                    <%=obj.price%>$
                </h2>
                <label for="bidPrice">Your Bid:</label>

                <input type="number" id="bidPrice" name="bidPrice" min=<%obj.price%> max="10000">
                <a href="#" class="btn btn-primary">Bid</a>
            </div>
        </div>
    </section>
</body>

</html>